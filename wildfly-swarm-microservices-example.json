{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "iconClass": "icon-jboss",
            "description": "Wildfly-Swarm Microservices Using Netflix OSS",
            "tags": "wildfly,javaee,java,jboss,xpaas,netflix",
            "version": "1.3.0"
        },
        "name": "wildfly-swarm-microservices-example"
    },
    "labels": {
        "template": "wildfly-swarm-microservices-example",
        "xpaas": "1.3.0"
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "employee-app"
                }
            },
            "metadata": {
                "name": "employee-app",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "The Employee service http port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "payroll-app"
                }
            },
            "metadata": {
                "name": "payroll-app",
                "labels": {
                    "application": "wildfly-swarm-microservices-example",
                    "hystrix.enabled": "true"
                },
                "annotations": {
                    "description": "The Payroll service http port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "turbine"
                }
            },
            "metadata": {
                "name": "turbine",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Netflix Turbine"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "hystrix-dashboard"
                }
            },
            "metadata": {
                "name": "hystrix-dashboard",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Netflix Turbine"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "id": "employee-app",
            "metadata": {
                "name": "employee-app",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Route for Employee http service."
                }
            },
            "spec": {
                "to": {
                    "name": "employee-app"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "id": "payroll-app",
            "metadata": {
                "name": "payroll-app",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Route for Payroll http service."
                }
            },
            "spec": {
                "to": {
                    "name": "payroll-app"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "id": "turbine",
            "metadata": {
                "name": "turbine",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Route for Turbine."
                }
            },
            "spec": {
                "to": {
                    "name": "turbine"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "id": "hystrix-dashboard",
            "metadata": {
                "name": "hystrix-dashboard",
                "labels": {
                    "application": "wildfly-swarm-microservices-example"
                },
                "annotations": {
                    "description": "Route for Hystrix Dashboard."
                }
            },
            "spec": {
                "to": {
                    "name": "hystrix-dashboard"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "employee-app"
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "employee-app"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "employee-app",
                            "deploymentConfig": "employee-app"
                        }
                    },
                    "spec": {
                        "terminationGracePeriodSeconds": 60,
                        "containers": [
                            {
                                "name": "employee-app",
                                "image": "wildfly-swarm-microservices-example/employee-service:1.0.0-SNAPSHOT",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [],
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "volumes": []
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "payroll-app"
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "payroll-app"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "payroll-app",
                            "deploymentConfig": "payroll-app"
                        }
                    },
                    "spec": {
                        "terminationGracePeriodSeconds": 60,
                        "containers": [
                            {
                                "name": "payroll-app",
                                "image": "wildfly-swarm-microservices-example/payroll-service:1.0.0-SNAPSHOT",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [ 
                                    {
                                        "name": "EMPLOYEE_ENDPOINT",
                                        "value": "http://${EMPLOYEE_APP_SERVICE_HOST}:${EMPLOYEE_APP_SERVICE_PORT}"
                                    }
                                ],
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "turbine"
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "turbine"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "turbine",
                            "deploymentConfig": "turbine"
                        }
                    },
                    "spec": {
                        "terminationGracePeriodSeconds": 60,
                        "containers": [
                            {
                                "name": "turbine",
                                "image": "wildfly-swarm-microservices-example/turbine:1.0.0-SNAPSHOT",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "hystrix-dashboard"
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "hystrix-dashboard"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "hystrix-dashboard",
                            "deploymentConfig": "hystrix-dashboard"
                        }
                    },
                    "spec": {
                        "terminationGracePeriodSeconds": 60,
                        "containers": [
                            {
                                "name": "hystrix-dashboard",
                                "image": "wildfly-swarm-microservices-example/hystrix-dashboard:1.0.0-SNAPSHOT",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ]
                    }
                }
            }
        }
        
    ]
}
